@startuml PERDS_UseCase_Diagram

title PERDS System - Use Case Diagram

left to right direction

actor "Emergency\nDispatcher" as Dispatcher
actor "System\nAdministrator" as Admin
actor "Analytics\nTeam" as Analytics
actor "Emergency\nCaller" as Caller

rectangle "PERDS System" {

    package "Emergency Management" {
        usecase "Report Emergency" as UC1
        usecase "Process Emergency\nQueue" as UC2
        usecase "Assign Priority\nLevel" as UC3
        usecase "Track Emergency\nStatus" as UC4
    }

    package "Unit Dispatch" {
        usecase "Find Closest\nAvailable Unit" as UC5
        usecase "Calculate Optimal\nRoute" as UC6
        usecase "Dispatch Unit to\nEmergency" as UC7
        usecase "Update Unit\nAvailability" as UC8
        usecase "Monitor Unit\nStatus" as UC9
    }

    package "Network Management" {
        usecase "Add Dispatch\nCenter" as UC10
        usecase "Add Route/Path" as UC11
        usecase "Update Route\nConditions" as UC12
        usecase "Remove Center\nor Path" as UC13
    }

    package "Predictive Analytics" {
        usecase "Record Emergency\nHistory" as UC14
        usecase "Identify High-Demand\nAreas" as UC15
        usecase "Generate Prediction\nReport" as UC16
        usecase "Recommend Unit\nPositioning" as UC17
    }

    package "System Monitoring" {
        usecase "View System\nStatus" as UC18
        usecase "Generate Performance\nMetrics" as UC19
        usecase "Monitor Response\nTimes" as UC20
    }
}

